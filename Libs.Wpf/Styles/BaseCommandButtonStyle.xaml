<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="BaseButtonStyle.xaml" />
        <ResourceDictionary
            Source="../Templates/CommandButtonTemplate.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style
        TargetType="Button"
        x:Key="BaseCommandButtonStyle"
        BasedOn="{StaticResource BaseButtonStyle}">
        <Setter
            Property="Template"
            Value="{StaticResource CommandButtonTemplate}" />
    </Style>
</ResourceDictionary>
