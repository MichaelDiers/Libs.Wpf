<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Libs.Wpf.Converters"
    xmlns:viewModels="clr-namespace:Libs.Wpf.ViewModels">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="ControlStyle.xaml" />
        <ResourceDictionary
            Source="LabelStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <converters:ImageSourceToVisibilityConverter
        x:Key="ImageSourceToVisibilityConverter" />
    <converters:NullOrEmptyToVisibilityConverter
        x:Key="NullOrEmptyToVisibilityConverter" />
    <Style
        TargetType="Button"
        x:Key="ButtonStyle"
        BasedOn="{StaticResource ControlStyle}" />
    <Style
        TargetType="Button"
        x:Key="TranslatableButtonStyle"
        BasedOn="{StaticResource ButtonStyle}">
        <Setter
            Property="Command"
            Value="{Binding Command}" />
        <Setter
            Property="ToolTip"
            Value="{Binding ToolTipTranslation}" />
        <Setter
            Property="ContentTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Border>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition
                                    Width="Auto" />
                                <ColumnDefinition
                                    Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Image
                                Grid.Column="0"
                                MaxHeight="{Binding ElementName=Label, Path=ActualHeight}"
                                Source="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button},Path=DataContext.(viewModels:TranslatableButtonBase.ImageSource)}"
                                Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button},Path=DataContext.(viewModels:TranslatableButtonBase.ImageSource), Converter={StaticResource ImageSourceToVisibilityConverter}}" />
                            <Label
                                Grid.Column="1"
                                x:Name="Label"
                                DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button},Path=DataContext}"
                                Style="{StaticResource TranslatableLabelStyle}"
                                VerticalAlignment="Center"
                                Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button},Path=DataContext.(viewModels:TranslatableButtonBase.LabelTranslation), Converter={StaticResource NullOrEmptyToVisibilityConverter}}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style
        TargetType="Button"
        x:Key="CancellableTranslatableButtonStyle"
        BasedOn="{StaticResource TranslatableButtonStyle}">
        <Style.Triggers>
            <DataTrigger
                Binding="{Binding Command.IsActive}"
                Value="True">
                <Setter
                    Property="Command"
                    Value="{Binding Command.CancelCommand}" />
                <Setter
                    Property="ToolTip"
                    Value="{Binding CancelToolTipTranslation}" />
                <Setter
                    Property="Panel.ZIndex"
                    Value="2000" />
                <Setter
                    Property="Cursor"
                    Value="Arrow" />
                <Setter
                    Property="ContentTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Border>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition
                                            Width="Auto" />
                                        <ColumnDefinition
                                            Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        Grid.Column="0"
                                        MaxHeight="{Binding ElementName=Label, Path=ActualHeight}"
                                        Source="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button},Path=DataContext.CancelImageSource}"
                                        Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button},Path=DataContext.CancelImageSource, Converter={StaticResource ImageSourceToVisibilityConverter}}" />
                                    <Label
                                        Grid.Column="1"
                                        x:Name="Label"
                                        DataContext="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button},Path=DataContext}"
                                        Style="{StaticResource LabelStyle}"
                                        Visibility="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Button},Path=DataContext.(viewModels:TranslatableButtonBase.LabelTranslation), Converter={StaticResource NullOrEmptyToVisibilityConverter}}">
                                        <Label.ContentTemplate>
                                            <DataTemplate>
                                                <TextBlock
                                                    Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType=Label}, Path=DataContext.CancelLabelTranslation}" />
                                            </DataTemplate>
                                        </Label.ContentTemplate>
                                    </Label>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>
