<!-- A collection of default styles for common controls -->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary
            Source="CommonStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <Style
        TargetType="Button"
        BasedOn="{StaticResource ButtonStyle}" />
    <Style
        TargetType="CheckBox"
        BasedOn="{StaticResource CheckBoxStyle}" />
    <Style
        TargetType="ComboBox"
        BasedOn="{StaticResource ComboBoxStyle}" />
    <Style
        TargetType="GroupBox"
        BasedOn="{StaticResource GroupBoxStyle}" />
    <Style
        TargetType="Expander"
        BasedOn="{StaticResource ExpanderStyle}" />    
    <Style
        TargetType="Label"
        BasedOn="{StaticResource LabelStyle}" />
    <Style
        TargetType="PasswordBox"
        BasedOn="{StaticResource PasswordBoxStyle}" />
    <Style
        TargetType="ScrollViewer"
        BasedOn="{StaticResource ScrollViewerStyle}" />
    
    <Style
        TargetType="TextBlock"
        BasedOn="{StaticResource TextBlockStyle}" />
    <Style
        TargetType="TextBox"
        BasedOn="{StaticResource TextBoxStyle}" />
    <Style
        TargetType="Window"
        BasedOn="{StaticResource WindowStyle}" />
</ResourceDictionary>
